#Nombre maximum de connexion bers d'autres pairs
maxPeerConnections = 5

#Nombre de milisecondes utilisé pou rcalculer le débit
rateMeanTime = 1000

#Temps entre chaque mise à jour d tracker et des pairs en milisecondes
